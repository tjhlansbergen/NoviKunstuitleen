@model NoviKunstuitleen.Models.HomeViewModels.IndexViewModel

@inject SignInManager<NoviArtUser> SignInManager
@inject UserManager<NoviArtUser> UserManager

@{
    ViewData["Title"] = "Collectie";
}

<div class="fullcontent">

    <!-- NIEUW OBJECT, alleen tonen voor docenten -->
    @if (SignInManager.IsSignedIn(User) && new string[] { "Docent", "Admin", "Root" }.Contains(User.FindFirst("Type").Value))
    {
        <a class="largelink" asp-controller="Home" asp-action="Create">&#9776; Plaats nieuw kunstwerk</a>
    }

    @if (Model.HighlightedArtPiece != null)
    {
        <!-- UITGELICHT -->
        <div class="highlighted">
            <h3>Uitgelicht</h3>
            <div class="highlightedcontent">
                <partial name="_ItemPartial" model='new ItemViewModel(Model.HighlightedArtPiece, Model.Users.Where(a => a.Id == Model.HighlightedArtPiece.Lesser)?.First())' />
            </div>

            <div class="highlightedimage">
                @if (Model.HighlightedArtPiece.ImageContent != null && Model.HighlightedArtPiece.ImageType != null)
                {
                    string img64 = Convert.ToBase64String(Model.HighlightedArtPiece.ImageContent);
                    string img64Url = string.Format("data:image/{0};base64,{1}", Model.HighlightedArtPiece.ImageType, img64);
                    <img class="imagehighlight shadow" src="@img64Url" />
                }
                else
                {
                    <img class="imagehighlight shadow" src="~/img/noimage.png" />
                }

            </div>
            <div class="clear">
                <!-- lege div voor clear -->
            </div>
        </div>
    }


    <!-- COLLECTIE -->
    <div class="collection">
        <div class="sectionheader">
            <h3>Collectie</h3>
        </div>

        @foreach (var artpiece in Model.ArtPieces)
        {
            <div class="artpiece">
                <div class="shadow">
                    <div class="artpieceimage">

                        @if (artpiece.ImageContent != null && artpiece.ImageType != null)
                        {
                            string img64 = Convert.ToBase64String(artpiece.ImageContent);
                            string img64Url = string.Format("data:image/{0};base64,{1}", artpiece.ImageType, img64);
                            <img class="imageartpiece" src="@img64Url" />
                        }
                        else
                        {
                            <img class="imageartpiece" src="~/img/noimage.png" />
                        }
                    </div>
                    <div class="artpiececontent">
                        <partial name="_ItemPartial" model='new ItemViewModel(artpiece, Model.Users.Where(a => a.Id == artpiece.Lesser)?.First())' />
                    </div>
                </div>
            </div>
        }

        <div class="clear">
            <!-- lege div voor clear -->
        </div>
    </div>

</div>

<footer class="footer">
    &copy; 2019 - Tako Lansbergen
</footer>