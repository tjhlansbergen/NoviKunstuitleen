@model NoviKunstuitleen.Models.HomeViewModels.IndexViewModel

@inject SignInManager<NoviArtUser> SignInManager
@inject UserManager<NoviArtUser> UserManager

@{
    ViewData["Title"] = "Collectie";
}

<div class="fullcontent">

    <!-- NIEUW OBJECT, alleen tonen voor docenten -->
    @if (SignInManager.IsSignedIn(User) && new string[] { "Docent", "Admin", "Root" }.Contains(User.FindFirst("Type").Value))
    {
        <a class="largelink" asp-controller="Home" asp-action="Create">&#9776; Plaats nieuw kunstwerk</a>
    }

    @if (Model.HighlightedArtPiece != null)
    {
        <!-- UITGELICHT -->
        <div class="highlighted">
            <h3>Uitgelicht</h3>
            <div class="highlightedcontent">
                <partial name="_ItemContentPartial" model='new ItemContentViewModel(Model.HighlightedArtPiece, Model.Users.Where(a => a.Id == Model.HighlightedArtPiece.Lesser)?.First(), title: true, descrption: true)' />
            </div>

            <div class="highlightedimage">
                <partial name="_ItemImagePartial" model='new ItemImageViewModel(Model.HighlightedArtPiece.ImageContent, Model.HighlightedArtPiece.ImageType, highlight: true)' />

            </div>
            <div class="clear">
                <!-- lege div voor clear -->
            </div>
        </div>
    }


    <!-- COLLECTIE -->
    <div class="collection">
        <div class="sectionheader">
            <h3>Collectie</h3>
        </div>

        @foreach (var artpiece in Model.ArtPieces)
        {
            <div class="artpiece">
                <div class="shadow">
                    <div class="artpieceimage">
                        <partial name="_ItemImagePartial" model='new ItemImageViewModel(artpiece.ImageContent, artpiece.ImageType, highlight: false)' />
                    </div>
                    <div class="artpiececontent">
                        <partial name="_ItemContentPartial" model='new ItemContentViewModel(artpiece, Model.Users.Where(a => a.Id == artpiece.Lesser)?.First(), title: true, descrption: false)' />
                    </div>
                </div>
            </div>
        }

        <div class="clear">
            <!-- lege div voor clear -->
        </div>
    </div>

</div>

<footer class="footer">
    &copy; 2019 - Tako Lansbergen
</footer>