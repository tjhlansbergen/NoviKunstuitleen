@page
@model RegisterModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="semipaint">
    <!-- lege div met achtergrond -->
</div>

<div class="semicontent">
    <div class="form">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Maak een nieuw account:</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.DisplayName"></label>
                <input asp-for="Input.DisplayName" class="form-control" placeholder="Zichtbaar voor andere ingelogde bezoekers" />
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Number"></label>
                <input asp-for="Input.Number" class="form-control" />
                <span asp-validation-for="Input.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Type"></label>
                <br />
                &nbsp;&nbsp;
                <input asp-for="Input.Type" type="radio" value="@NoviUserType.Student" /> Novi Student
                &nbsp;&nbsp;&nbsp;&nbsp;
                <input asp-for="Input.Type" type="radio" value="@NoviUserType.Docent" /> Novi Docent
                <span asp-validation-for="Input.Type" class="text-danger"></span>
            </div>
            <h4>Inloggegevens:</h4>
            <hr />

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registreer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
